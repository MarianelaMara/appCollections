<p style="color: green"><%= notice %></p>


<div>
  <%= link_to "Volver a colecciones", collections_path, class: "btn btn-secondary" %>
</div>


<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @collection.name %></h5>
    <p class="card-text">
      <strong>Owner:</strong>
      <%= @collection.owner %>
    </p>
    <p class="card-text">
      <strong>Manufacturing lead time:</strong>
      <%= @collection.manufacturing_lead_time %>
    </p>
    <p class="card-text">
      <strong>Estimated release date:</strong>
      <%= @collection.estimated_release_date %>
    </p>
    <p class="card-text">
      <strong>Articulos:</strong>
      <ul class="list-group list-group-flush">
        <% @collection.articles.each do |article| %>
          <li class="list-group-item"><%= article.model %> <%= link_to "Ver articulo", collection_article_path(@collection, article), class: "btn btn-primary" %></li>
        <% end %>
      </ul>
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Editar coleccion", edit_collection_path(@collection), class: "btn btn-warning me-md-2" %> 
  <%= button_to "Eliminar coleccion", @collection, method: :delete, class: "btn btn-danger me-md-2" %>

  <%= link_to  "Agregar articulo", new_collection_article_path(@collection), method: :post, class: "btn btn-success me-md-2" %>
 
</div>
  </div>
</div>



