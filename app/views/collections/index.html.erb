<p style="color: green"><%= notice %></p>

<h1>Colecciones</h1>

<div id="collections">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @collections.each do |collection| %>
        <tr>
          <td><%= collection.name %></td>
          <td>
            <%= link_to "Ver colección", collection, class: "btn btn-primary" %>
            <%= link_to "Editar colección", edit_collection_path(collection), class: "btn btn-secondary" %>
            <%= link_to "Eliminar colección", collection, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Nueva colección", new_collection_path, class: "btn btn-success" %>
</div>